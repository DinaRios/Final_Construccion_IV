@model IEnumerable<Sistema.Productos>

@{
    ViewBag.Title = "Productos Registrados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro de los productos</h2>

<p>
    @Html.ActionLink("Insertar un nuevo producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidades)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria1.Nombre_Categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidades)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria1.Nombre_Categoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Codigo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Codigo }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Codigo })
        </td>
    </tr>
}

</table>
